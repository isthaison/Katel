<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:padding="20dp"
    android:background="#FAFAFA"
    android:orientation="vertical">

    <TextView
        android:text="Chọn tỉnh thành bạn muốn đến"
        android:textSize="18sp"
        android:textColor="#FAFAFA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        tools:ignore="HardcodedText" />

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar_fitler" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:text="Tỉnh"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            tools:ignore="HardcodedText"
            android:layout_width="40dp" />

        <Spinner
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/spn_filter_tinh"
            android:layout_width="200dp"
            android:backgroundTint="#0A4535" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:text="Quận"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/textView5"
            tools:ignore="HardcodedText"
            android:layout_width="40dp" />

        <Spinner
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/spn_filter_quan"
            android:backgroundTint="#0A4535"
            android:layout_width="200dp" />

    </LinearLayout>

    <Button
        android:text="Ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:background="@drawable/mbackground_button" />

</LinearLayout>
