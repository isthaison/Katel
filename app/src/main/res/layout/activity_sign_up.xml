<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FAFAFA"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgv_signup_avatar"
                android:src="@drawable/katel"
                android:layout_width="150dp"
                android:layout_height="150dp"
                tools:ignore="ContentDescription"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:background="@drawable/mbackground_imageview" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_signup_camera"
                    android:background="@drawable/ic_photo_camera_white_24dp"
                    android:backgroundTint="#0A4535" />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_signup_library"
                    android:background="@drawable/ic_photo_library_white_24dp"
                    android:backgroundTint="#0A4535" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColor="#FAFAFA"
                android:enabled="false"
                android:textColorHint="#BDBDBD"
                android:ems="10"
                android:id="@+id/edt_signup_email"
                android:hint="Email"
                tools:ignore="HardcodedText"
                android:layout_weight="1" />

            <TextView
                android:text="(*)"
                android:textColor="#B71C1C"
                android:layout_height="wrap_content"
                android:id="@+id/txt_notifice"
                android:layout_weight="1"
                android:layout_width="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:textColor="#212121"
                android:textColorHint="#757575"
                android:id="@+id/edt_signup_ten"
                android:layout_weight="1"
                android:hint="Tên"
                tools:ignore="HardcodedText,InefficientWeight" />

            <EditText
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="#212121"
                android:textColorHint="#757575"
                android:ems="10"
                android:id="@+id/edt_signup_ho"
                android:hint="Họ"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:textColor="#212121"
            android:textColorHint="#757575"
            android:id="@+id/edt_signup_matkhau"
            android:hint="Mật khẩu"
            tools:ignore="HardcodedText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#212121"
            android:textColorHint="#757575"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edt_signup_xacnhanmatkhau"
            android:hint="Xác nhận mật khẩu"
            tools:ignore="HardcodedText" />

        <Button
            android:text="Đăng kí"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_signup_dangki"
            android:background="@drawable/mbackground_button"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</ScrollView>